@model List<Model.>

<a asp-action="Create" asp-controller="Customer" class="btn btn-light">
	Novo Customers
</a>

@if (Model.Count > 0)
{
	<table>
		<thead>
			<tr>
				<th>Id</th>
				<th>Nome</th>
			</tr>
		</thead>
		<tbody>
			@foreach (Model.Customer customer in Model)
			{
				<tr>
					<td>@customer.Id</td>
					<td>@customer.Name</td>
				</tr>
			}
		</tbody>
	</table>
}

else
{
	<div>Não existem Registros de Customer</div>
}